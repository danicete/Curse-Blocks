// ★★ Block -> Tag (b-tag-a) ★★

// ✎ Horizontal tag list

// ⌚ Level 1.00 (02/17/12)

// ☍ Components:
//     - Title (b-tag-title)
//     - Item (b-tag-item)
//     - Wrapper (b-tag-wrapper)

// ☆ Sub-Classes:
//     - Null

// ☯ Browser Support:
//     - Chrome
//     - FireFox
//     - Safari
//     - IE9/8/7
 
// -_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

@mixin b-tag-a {
    
    @include group;

    // Title

    .b-tag-title { position: absolute; left: -9999px; }

    // Item

    .b-tag-item {
        float: left;
        line-height: $leading;
        margin: 0 4px 4px 0;

        > a { @include u-glyph-box; }
    }

    // Tag index

    .body-tag-index & {
        margin-left: 15px;

        > li {
            list-style-type: disc;
            color: $secondaryColor;
                    
            > a {
                border-bottom: 1px solid $box-borderColor;
                display: block;
                padding: $leading / 2 0;
            }
        }
    }

} // END b-tag-a