// Block -> Figure (b-figure-a)
//
// ✎ Standard figure element that contains an image and caption
//
// ⌚ Level 1.00 (05/03/12)
//
// ☍ Components:
//     - Caption (b-figure-caption)
//
// ☆ Sub-Classes:
//     - Null
//
// ☯ Browser Support:
//     - Chrome
//     - FireFox
//     - Safari
//     - Opera
//     - IE9/8/7
//
// --------------------------------------------------------- //

@mixin b-figure-a {

    @include inline-block;
    
    // Image

    img { display: block; }

    // Caption

    .caption {
        @include font(
            $font-weight: $figureFont-weight,
            $font-size: $figureFont-size,
            $line-height: $figureFont-lineHeight,
            $font-family: $figureFont-family
        );
            text-align: center;
        }

} // END b-figure-a