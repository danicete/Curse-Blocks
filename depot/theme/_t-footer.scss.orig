// ★★ Theme -> Footer ★★

// ✎ Styles for universal Curse footer

// ⌚ Level 1.00 (02/017/12)

// ☍ Components:
//     - Null

// ☆ Sub-Classes:
//     - Null

// ☯ Browser Support:
//     - Testing Required
 
// -_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

// Vars

$footerHeight: auto;
$footerWidth: 1000px;
$footerPadding: 0 8px;
$footerBg: #151515;
$footerBg-secondary: #262626;
$footerHeight-secondary: 30px;
$footerBg-teritary: #000;
$footerHeight-teritary: 20px;
$footerFeaturedImgPath-one: url('http://media-curse.cursecdn.com/attachments/63/906/featured-darthhater.png');
$footerFeaturedImgPath-two: url('http://media-curse.cursecdn.com/attachments/63/908/featured-lolpro.png');
$footerFeaturedImgPath-three: url('http://media-curse.cursecdn.com/attachments/63/909/featured-mmoc.png');
$footerFeaturedImgPath-four: url('http://media-curse.cursecdn.com/attachments/63/907/featured-diablo.png');
$footerFont-family: Tahoma, Geneva, Verdana;
$footerFont-color: #fff;

//@include sticky-footer($footerHeight, "#layout", "#layout_footer", "#footer");

.t-footer {
    @include group;
    font: 12px/18px $footerFont-family;
	background-color: $footerBg;
    height: $footerHeight;
    text-shadow: 0px -1px 0px rgba(0,0,0,.6);
	position: relative;
	border-top: $footerHeight-secondary solid $footerBg-secondary;
	padding-bottom: $footerHeight-teritary;

    // Set link colors
    a {
        color: #fff;
        font-family: $footerFont-family;
        white-space: nowrap;
        &:visited { color: #fff; }
        &:hover { color: #fff; text-decoration: none; }
        > strong {
            color: #FFCC33;
            &:hover { color: #fff; }
        }
    }

    // Headers

    h1, h2, h3, h4, h5, h6 { color: $footerFont-color; font-family: Arial, Helvetica, sans-serif; }

	.t-footer-wrapper {
        @include group;
        margin: 0 auto;
        width: $footerWidth;
        padding: 20px 0;

        // Fallbacks

        .ie7 & { position: relative; }
    }

	.t-footer-curseInfo {
		@include col(4);
		margin-left: 0;
		position: relative;
		z-index: 2;
		border-right: 1px solid #333;
			hgroup {
				margin-bottom: 15px;
				margin-right: 15px;
				margin-top: -40px;
				h1 { background: url("#{$imageURL-core}/footer/curse-logo.png") no-repeat 0 0; margin-bottom: 15px; width: 225px; height: 93px; display: block; text-indent: -9999px; }
				h2 { font-size: 12px; font-weight: normal; color: #fff; }
					> strong { font-weight: bold; }
			}
		.t-footer-signUp {
			background: $footerBg-secondary;
			@include borderRadius(8px);
			padding: 15px;
			margin: 0 15px 30px 0;
			> h4, h5 { font-size: 20px; font-weight: bold; color: #fff; line-height: 1.2em; text-shadow: 0 1px 1px #000; }
			h5 { margin-bottom: 10px; }

			.u-button {
                background-color: #EA8F20;
                @include backgroundGradient(linear-gradient(top, #EA8F20, #C56711));
				@include borderRadius(4px);
				@include boxShadow(inset 0 1px 0 rgba(255,255,255,0.2),0 1px 2px rgba(0,0,0,0.05));
				text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
				border-color: #C56711 #C56711 #EA8F20;
				border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
				overflow: hidden;
				color: #fff;
				padding: 10px 30px;
				font-weight: bold;
				font-size: 16px;
				display: inline-block;
			}
		}
		.t-footer-socialLinks {
			@include group;
			li {
				@include col(3);
				a { 
					display: block;
					i {
						display: block;
						margin: 0 auto;
						background: url("#{$imageURL-core}/footer/icon-social-links.png") no-repeat 0 0;
					&.u-icon-youtube { 
						width: 64px;
						height: 26px;
						background-position: 0 0;
						&:hover { background-position: 0 -28px; }
					}
					&.u-icon-twitter { 
						width: 37px;
						height: 27px;
						background-position: -66px 0; 
						&:hover { background-position: 0 -56px; }
					}
					&.u-icon-facebook {
						width: 16px;
						height: 32px; 
						background-position: -105px 0; 
						&:hover { background-position: -105px -34px; }
					}
					&.u-icon-rss { 
						width: 27px;
						height: 27px; 
						background-position: -39px -56px; 
						&:hover { background-position: -68px -56px; }
					}
					}
				}
				&:first-child { margin-left: 0; }
			}
		}
	}
    .t-footer-curseNetwork {
		@include col(8);
			border-top: 1px solid #333;
			> h4 {
				position: relative;
				top: -9px;
				background: $footerBg;
				padding: 0 10px 0 0;
				display: inline-block;
			}
			.t-footer-jumpLink {
				float: right;
				position: relative;
				top: -9px;
				padding: 0 10px;
				font-size: 10px;
				height: 16px;
				line-height: 16px;
				text-transform: uppercase;
				font-weight: bold;
				background: #383838;
				@include borderRadius(6px);
				&:hover { background: #EA8F20; color: #fff; }
			}
		.t-footer-featured {
            border-bottom: 1px solid #333;
			overflow: hidden;
            padding-bottom: 1.5em;
			.t-footer-featureItem {
				@include col(3);
				&:first-child { margin-left:0; }
				h4 { text-indent: -9999px; display: block; width:146px; height: 102px; background-repeat: no-repeat; background-position: 0 0; }
				&.site-darthhater {
					h4 { background-image: $footerFeaturedImgPath-one; }
				}
				&.site-lolpro {
					h4 { background-image: $footerFeaturedImgPath-two; }
				}
				&.site-mmoc {
					h4 { background-image: $footerFeaturedImgPath-three; }
				}
				&.site-diablofans {
					h4 { background-image: $footerFeaturedImgPath-four; }
				}
				a { display: block;  cursor: pointer; // Cross-browser fallback
					&:hover h4 { background-position: 0 -102px; }
				}
				dl {
					margin: 0;
					background: $footerBg-secondary;
					@include borderRadius-bottom(8px);
					width: 146px;
					padding: 5px 10px;

                    // Fallback

                    .ie7 & { width: 126px; }

					dt { font-weight: bold; color: #fff; }
					dd { margin: 0; font-size: 11px; white-space: normal; line-height: 13px; color: #ddd; }
				}
			}
		}
		.t-footer-browse {
			@include group;
			position: relative;
			padding-left: 170px;
			> li {
				> a {
				position: absolute;
				left: 0;
				width: 150px;
				font-weight: bold;
				color: #4b4b4b;
				text-shadow: 0 1px 0 #000;
				&.j-selected,
				&:hover { background: #2c2c2c; color: #ff5f14; }
				}
				&.t-footer-coreLinks > a { top: 0; }
				&.t-footer-communityLinks > a { top: 20px; }
				&.t-footer-databaseLinks > a { top: 40px; }
				&.t-footer-wikiLinks > a { top: 60px; } 
				> ul {
					@include group;
					display: none;
					> li {
						float: left;
						width: 143px;
						margin: 0 20px 2px 0;
						a { 
							display: block; 
							background: #2c2c2c;
							padding: 0 3px; 
							&:hover { background: #383838; color: #ff5f14; }
						}
					}
					&.j-list-selected { display: block; }
				}
			}
		}
	}
	.t-footer-curseLinks {
		background: $footerBg-teritary;
		clear: both;
		width: 100%;
		position: absolute;
		bottom: 0;
		> ul {
			@include group;
			width: $footerWidth;
			margin: 0 auto;
			> li { 
				float: left; 
				margin-right: 8px; 
				font-size: 11px; 
				line-height: $footerHeight-teritary; 
				height: $footerHeight-teritary; 
				a {
					color: #434343; 
					&:hover { color: #ff5f14; }
				}
			}
		}
	}
	.return-to-top {
		background: url("#{$imageURL-core}/footer/icon-back_to_top.png") no-repeat right center;
		padding-right: 24px; 
		position: absolute;
		top: -$footerHeight-secondary;
		width: $footerWidth;
		margin: 0 auto;
		text-align: right;
		display: block;
		font-size: 11px;
		font-weight: bold;
		height: $footerHeight-secondary;
		line-height: $footerHeight-secondary;

        // Fallbacks

        .ie7 & { width: auto; right: 0; }
	}

    // IE Fixes

    .ie7 & .t-footer-curseInfo { width: 30%; }
    .ie7 & .t-footer-curseNetwork { width: 67%; }

} // END t-netbar