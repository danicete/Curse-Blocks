// Mixins

// Alert

@mixin u-interface-alert {
	background-color: $alertBg-color;
    background: $alertBg-color $alertBg-image;
	border: $alertBorder;
	@include borderRadius($border-radius);
	color: $alertFont-color;
    margin-bottom: $leading;
    padding: $alertPadding;
	text-align: center;
	width: auto !important;
	height: auto !important;
	float: none !important;

	> *:only-of-type,
    > *:last-child { margin-bottom: 0; }
}
.alert { @include u-interface-alert; }
// -_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-

$interface-counter: 0 !default;

@while $interface-counter < 1 {

    // Base Selectors

    // Comments

    .comment-spam {
	    background: #DE0000 url("#{$imageURL-core}/ui/ui-spam-bg.png") no-repeat center center !important;
	    color: #fff;
    }

    .comment-deleted, .comment-deleted-with-note {
	    background:#333 url("#{$imageURL-core}/ui/ui-deleted-bg.png") no-repeat center center !important;
	    color: #fff;
    }

    // Loading Masks

    .loading {
        background-image: url("#{$imageURL-core}/ui/ajax-loader-dark.gif");
        background-position: right;
        background-repeat: no-repeat;
        padding-right: 19px;
    }

    .loading-left {
        background: url("#{$imageURL-core}/ui/ajax-loader-dark.gif") left no-repeat;
        padding-left: 19px;
    }

    .masked,
    .modal-loading { cursor: wait; }
    .loadmask {
        z-index: 1000;
        position: absolute;
        top:0;
        left:0;
        -moz-opacity: 0.5;
        opacity: .50;
        filter: alpha(opacity=50);
        background-color: #000;
        width: 100%;
        height: 100%;
        zoom: 1;
        background-image: url("#{$imageURL-core}/ui/ajax-loader.gif");
        background-position:center center;
        background-repeat:no-repeat;
    }

    .loadmask-msg {
        z-index: 20001;
        position: absolute;
        top: 0;
        left: 0;
    }

    .loadmask-msg div {
        padding:5px 10px 5px 25px;
        line-height: 16px;
        color:white;
        padding-left: 16px;
    }

    .masked-relative{ position: relative !important; }
    .masked-hidden { visibility: hidden !important; }

    // Auto Complete
input[type=text],
input[type=search] {
    &.ac_loading { background-image: url("#{$imageURL-core}/ui/ac-loader.gif"); background-repeat: no-repeat; background-position: 97% center; }
}
    .ac_results {
	    z-index: 3;
	    background: $modalBg;
        border: $modalBorderWidth solid $modalBorderColor;
	    @include boxShadow($modalBoxShadow-outter);
        ul {
            padding: 3px 0;
            white-space: nowrap;
            font-weight: normal;
        }
	    li {
		    div,
            a {
			    padding: 1px 16px 1px 6px;
			    display: block;
                line-height: 16px;
                border: solid $box-bg;
                border-width: 1px 0;
                text-decoration: none;
                color: $font-color;
			    img {
				    margin-right: 5px;
				    width: 30px;
			    }
                .autoCompleteCategory { float: right; }
		    }
            &.ac_over { background: $link-color; border-color: darken($link-color,50%); color: $font-colorTertiary; cursor: pointer; }
	    }
    }

    // Expandable
    .u-hidden,
    button[class*="u-hidden"],
    a[class*="u-hidden"],
    div[class*="u-hidden"],
    span[class*="u-hidden"],
    p[class*="u-hidden"] { display: none; }

    // Jump Link

    .jump-link { @include u-button-z; }

    // Buttons

    button[type="submit"],
    input[type="submit"],
    .button { @include u-button-z; }

    $interface-counter: $interface-counter + 1;
}