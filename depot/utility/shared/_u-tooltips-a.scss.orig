$tooltips-counter: 0 !default;

@while $tooltips-counter < 1 {

    // Utility -> tooltips (u-tooltips-a)

    // ✎ Standard project tooltips

    // ⌚ Level 1.00 (02/017/12)

    // ☍ Components:
    //     - Null

    // ☆ Sub-Classes:
    //     - Null

    // ☯ Browser Support:
    //     - Testing Required
 
    // -_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

    .tip { cursor: default; }

    .u-tooltips-a {
        background: $primaryColor;
        @include borderRadius($border-radius);
        @include boxShadow(0 0 6px rgba(0,0,0,.1));
        border: $box-border;
        padding: 10px;
	    width: auto; 
	    max-width: 400px; 
	    z-index: 100000006;
    }

    $tooltips-counter: $tooltips-counter + 1;
}
