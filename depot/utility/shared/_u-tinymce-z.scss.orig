$tinymce-counter: 0 !default;

@while $tinymce-counter < 1 {

    // Utility -> Vanity

    // ✎ Standard project vanities

    // ⌚ Level 1.00 (06-06-12)

    // ☍ Components:
    //     - Null

    // ☆ Sub-Classes:
    //     - Null

    // ☯ Browser Support:
    //     - Testing Required
 
    // -_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

    body#tinymce {
        background: $tinyMCE-bg;
    }

    #tinymce .spoiler
    {
        border: 1px solid gray;
        background: $box-bg;
        padding: 5px;
        > p:last-child { margin-bottom: 0; }
    }

    .mceToolbar a.mce_spoiler > span.mceIcon
    {
        background: url("#{$imageURL-core}/ui/exclamation.png") no-repeat center center;   
        display: block;
        width: 100%;
        height: 100%;
    }

    $tinymce-counter: $tinymce-counter + 1;
}