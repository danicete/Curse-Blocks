// ************************************************************************************************************************
// * Plugin -> Base (p-base-a)                                                                                            *
// *                                                                                                                      *
// * Sub-Classes:                                                                                                         *
// *    - Null                                                                                                            *
// ************************************************************************************************************************

// --------------------------------------------------------- //
// 1.) Mixin                                                   
// --------------------------------------------------------- //

@mixin p-base-a {

    @include group;
    background: $baseBg;
    border: $baseBorder;
    @include borderRadius($baseBorder-radius);
    color: $baseFont-color;
    margin-bottom: $leading * 2;
    padding: $basePadding;
    position: relative;

    // Header

    .p-base-header {
        margin-bottom: $leading;

        .title { color: $baseHeader-color; }
    }

    // Filters

    .filters {
        @include custom-checkbox;
        margin-bottom: $leading;

        // Search by Text Input

        .text-input { float: left; margin-right: $col-gutter; width: 18%; }

        // Title

        .title { position: absolute; left: -9999px; } // Base styles for single category filter, override this style on project level for multiple category filters with titles

        // Filter Options

        .filter {
            @include inline-block;
            padding: 0;

            & { margin-right: 12px; }
        } 
    }

    // Content

    .p-base-content { @include group; @include u-typography-base($color: $box-fontColor, $leading: 1.4em); }

    // Footer

    .p-base-footer { margin-top: $leading; text-align: right; }

    // Empty

    .p-base-empty { margin: $leading; text-align: center; }

    // Comments

    .comments { @include u-glyph-speechBubble; }

} // END p-base-a