@mixin p-pm-a {

    border: $pmBorder;

    // Header

    .p-pm-header {
        @include group;        

		// Filter

        .p-pm-filter {
            margin-bottom: $leading;
			float: left;
			margin-right: $leading;
            // User Action

            .b-userAction { display: inline-block; float: none; }
        }

    }

    // New Message

    &.s-index {

        .b-userAction {
            float: right;

            > a { font-size: $font-sizeLarger; padding: $button-padding; }
        }
    }

    // Title

    &.s-detail {
        
        .h2 { margin-bottom: $leading; }
    }

    // Content

    .p-pm-content {

        
        // Participants

        .p-pm-participants {
            @include col(4);
            float: right;
            padding: $box-padding;
            padding-top: 0;

            > header, > ul { margin-bottom: $leading; }

            .b-userAction { margin-top: 0; }
        }

        // Conversation [p-comments]

        .p-comments { @include col(8); float: right; margin-left: 0; }
    }

    // Content (s-index)

    &.s-index .p-pm-content {
        
        // Messages

        table {
            clear: both;
            margin-bottom: $leading;
            width: 100%;

            .col-conversation,
            .col-last-post,
            .col-members { text-align: left; } // Align left for longer entries

            .col-count,
            .col-actions { font-weight: bold; text-align: center; } // Align center for small entries
        }
    }

    // Footer

    .p-pm-footer {
        @include group;

        .form-actions {
            
            > button { @include u-button-z; }
        }
    }

    // Footer (s-index)

    &.s-index .p-pm-footer {

        // Bulk Moderation

        .p-pm-bulk-moderation
		{
			float: right;
		}

        .form-field {
            
            &:after {
                content: "\2014";
                color: $font-colorDarker;
                display: inline-block;
                padding: 0 4px 0 0;
            }
        }
    }

} // END p-pm-a