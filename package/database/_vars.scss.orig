//
// News-Forum Master Variables
//
// Project Documentation: http://wwww.styleguide/link/goes/here
// Color Guide: http://www.colourlovers.com/palette/2226225/Skin_an_blue
// ------------------------------------------------------------------------------------------

//                                                                             TIER 1: CORE VARIABLES
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------ //

// (1) Base
// ------------------------------------------------------------------------------------------

// Config

$imageURL-core: "../../Blocks/images" !default;
$imageURL-local: "../images" !default;

// Palette 

$primaryColor: #fff !default; // Temp Example Name
$secondaryColor: #F0F2EB !default; // Temp Example Name
$tertiaryColor: #FF4242 !default; // Temp Example Name
$quaternaryColor: #E1EDB9 !default; // Temp Example Name
$quinaryColor: #B8986B !default; // Temp Example Name

//                                                                             TIER 2: BASE VARIABLES
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------ //

// (2) Typography
// ------------------------------------------------------------------------------------------

$fontSize: 13px !default; // Base font size sets typographic scale
$fontSize-smaller: 11px !default;
$fontSize-larger: 15px !default;
$fontColor: #4c4c4c !default;
$fontColor-secondary: #333 !default;
$fontColor-tertiary: #fff !default;
$fontColor-quaternary: #fff !default;
$fontColor-lighter: lighten($fontColor, 5%) !default;
$fontColor-darker: darken($fontColor, 5%) !default;
$fontFamily: inherit !default;

$leading: 20px !default;

$textShadow: 0 1px 0px rgba(0,0,0,.4) !default;
$textShadow-chrome: $textShadow !default;

// Links

$linkColor: $tertiaryColor !default;
$linkColor-visited: $linkColor !default;
$linkColor-hover: $fontColor !default;
$linkColor-active: $linkColor !default;
$linkColor-secondary: $fontColor-secondary !default;
$linkFamily: $fontFamily !default;

// Headers

$headerColor: darken($fontColor, 15%) !default;
$headerColor-visited: $headerColor !default;
$headerColor-hover: $linkColor !default;
$headerColor-active: $headerColor !default;

$headerSize: 26px !default;
$headerLeading: 1em !default;
$headerMargin: 0 0 .2em !default;
$headerFamily: $fontFamily !default;
$headerWeight: bold !default;
$headerLetterSpacing: 0 !default;

// (2) Site
// ------------------------------------------------------------------------------------------

// Dimensions

$site-margin: 0 auto $leading !default;
$site-width: 1000px !default;
$site-maxWidth: 1280px !default;
$site-minWidth: 1000px !default;
$siteGutter-left: 0 !default;
$siteGutter-right: 0 !default;
$siteBg: url("#{$imageURL-local}/theme/header-bg.png") repeat-x top left !default;
$siteFooter-curse: url("#{$imageURL-local}/theme/curse-logo-footer.png") no-repeat 0 0;
// Wrappers
$bodyImg: none !default;
$bodyBg: $primaryColor $bodyImg !default;

$bodyHomeBg-Img: url("#{$imageURL-local}/theme/header-bg.png") repeat-x left 142px !default;
$bodyHomeBg: $primaryColor !default;

$wrapperBg: none !default;
$wrapper-padding: 0 20px !default;

$contentBg: transparent none !default;
$contentBg-single: $contentBg !default;
$contentBorder: none !default;
$contentBorder-radius: null !default;
$contentPadding: $leading !default;
$contentBox-Shadow: 0 0 3px rgba(0,0,0,.315) !default;

//                                                                             TIER 3: COMPONENT VARIABLES
// ------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------ //


// (3) Breadcrumb
// ------------------------------------------------------------------------------------------

$breadcrumbMargin: 0 0 10px !default;
$breadcrumbItem-fontSize: $fontSize !default;
$breadcrumbItem-fontWeight: normal !default;
$breadcrumbItem-color: $linkColor !default;
$breadcrumbItem-hover: $linkColor-hover !default;
$breadcrumbItem-padding: 0 !default;
$breadcrumbItem-bg: none !default;
$breadcrumbHomeItem-bg: none !default;
$breadcrumbHomeItem-padding: 0 !default;


// (3) Table
// ------------------------------------------------------------------------------------------

$table-bg: darken($primaryColor, 5%) !default;
$table-bgAlt: $table-bg !default;
$tableHeader-bg-top: $secondaryColor !default;
$tableHeader-bg-bottom: darken($tableHeader-bg-top, 10%) !default;
$tableHeader-bg: $tableHeader-bg-top;
$tableHeader-color: $fontColor-secondary !default;

$tableHeader-padding: 4px 8px;
$tableHeader-border: $boxBorder !default;
$tableCell-boxShadow: inset 0 1px 0 rgba(255,255,255,.1) !default;
$tableCell-bg: $table-bg;
$tableCell-border: $tableHeader-border !default;
$tableCell-borderWidth: 1px !default;
$tableCell-height: 18px;
$tableCell-padding: $tableHeader-padding;


// (3) Header
// ------------------------------------------------------------------------------------------

// Bg
$headerBg: transparent none !default;

// Logo
$headerLogo: url("#{$imageURL-local}/logo.png") no-repeat center center !default;
$headerLogo-hover: 0 0 !default;
$headerLogo-height: 104px !default;
$headerLogo-width: 170px !default;

// Logo Homepage
$headerLogoBig: url("#{$imageURL-local}/logo-home.png") no-repeat center center !default;
$headerLogoBig-hover: 0 0 !default;
$headerLogoBig-height: 145px !default;
$headerLogoBig-width: 313px !default;

// Search
$headerSearch-position: relative !default;
$headerSearch-top: 0px !default;
$headerSearch-right: 0px !default;
$headerSearch-bg: url("#{$imageURL-core}/icons/16x16/magnify.png") no-repeat !default;
