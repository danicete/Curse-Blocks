// --------------------------------------------------------- //
// (3) Header                                                  
// --------------------------------------------------------- //

    $headerSubtitle-position: relative;
    $headerSubtitle-left: 250px;

// --------------------------------------------------------- //
// (3) Cover                                                   
// --------------------------------------------------------- //

    $guideCover-bgImage: url("#{$imageURL-local}/guide-cover-default.png") no-repeat right top !default;
    $guideCover-bgColor: transparent !default;
    $guideCover-bg: $guideCover-bgColor $guideCover-bgImage !default;
    $guideCover-minHeight: 342px !default;
    $guideCover-padding: $leading !default;
    $guideCover-textShadow: 0 1px 0 rgba(0,0,0,.8), 0 0 15px rgba(0,0,0,.4), 0 0 30px rgba(0,0,0,.8) !default;
    $guideCover-width: 40% !default;

    $guideCoverFont-weight: bold !default;

    $guideCoverSeparator: "\00B7\00A0" !default; // Middot

    $guideToc-borderWidth: 0 0 2px 0 !default;
    $guideToc-borderColor: $tabBg !default;
    $guideToc-padding: $leading / 2 !default;

    $guideTab-borderRadius: 4px !default;
    $guideTab-gradient: $gradient-colorLinearTop !default;
    $guideTab-textShadow:  $textShadow !default;
    $guideTab-boxShadow: inset 0 1px rgba(255, 255, 255, .2),0 -5px 8px rgba(0, 0, 0, 0.4) !default;